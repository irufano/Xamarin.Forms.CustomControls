<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HS.Controls.CheckBox">
    <ContentView.Content>
        <TableView Intent="Settings" x:Name="CheckTableView" HasUnevenRows="True" HeightRequest="30"  >
            <TableRoot   >
                <TableSection   >
                    <ViewCell Tapped="Check_Tapped" x:Name="CheckViewCell"  Height="30">
                        <StackLayout Orientation="Horizontal" x:Name="CheckParent"  >
                       
                            <Image x:Name="CheckImage" />
                            <Label x:Name="CheckLabel" Text="Sample Text" VerticalOptions="Center" ></Label>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>

    </ContentView.Content>
</ContentView>