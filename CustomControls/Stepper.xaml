<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NIFShopping.CustomControls.Stepper">
  <ContentView.Content>
      <StackLayout x:Name="stk">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33*"></ColumnDefinition>
                    <ColumnDefinition Width="33*"></ColumnDefinition>
                    <ColumnDefinition Width="33*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
            
            <Button x:Name="btnMinus" BackgroundColor="Transparent" Image="minus.png" Grid.Column="0" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="End"/>
                <Entry  x:Name="txtValue" HorizontalTextAlignment="Center" IsEnabled="False" WidthRequest="50" Keyboard="Numeric" Text="1" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="FillAndExpand" BackgroundColor="Transparent" TextChanged="txtValue_TextChanged"></Entry>
                <Button x:Name="btnPlus" BackgroundColor="Transparent" Image="plus.png" Grid.Column="2" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start"/>
            </Grid>
        </StackLayout>
  </ContentView.Content>
</ContentView>